#set($page_title=" 库存详情")
#set($selected_menu_id='menu_task_center_index')
#set($layout = "blank.vm")

<script src="/plug-in/fusheng/repertory/out/info.js?_dc=$!{staticVersion}"></script>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title" id="myModalLabel">入库管理<span style="font-size: 12px">>>
                出库详情
        </span></h4>
</div>
<input type="hidden" id="id" name="id" value="$!{record.id}"/>
<input type="hidden" id="storageId" name="storageId" value="$!{record.storageId}"/>
<input type="hidden" id="pId" name="pId" value="$!{record.partId}"/>


<div class="" id="out-Info">
    <div class="print-header col-xs-12" style="font-family: 微软雅黑, 幼圆, 宋体;">
        <div class="col-xs-3 align-center" style="margin-top: 20px;font-size: 8px">
            <div class="print-logo ">
                <img src="/images/logo.png" style="width: 150px">
            </div>
            <div class="print-culture ">
                精益求精为用户提供优质，安全
                <br>
                可靠的产品和满意的服务
            </div>
        </div>
        <div class="col-xs-9 align-center" style="font-weight:bolder">
            <div class="print-business">
                <h1>北京精通复盛机械有限公司</h1>
            </div>
            <div class="print-title">
                <h3>销售出库单</h3>
            </div>
        </div>
    </div>
    <div class="print-body col-xs-12">
        <table style="width: 95%;font-size: 14px;margin-left: 20px;margin-right: 20px;margin-top: 10px;">
            <tr style="">
                <td >
                    出库单号：
                </td>
                <td >
                    $!{record.code}
                </td>
                <td >
                    客户名称：
                </td>
                <td >
                    $!{record.customerName}
                </td>
                <td style="">
                    客户地址：
                </td>
                <td style="">
                    $!{record.receiverAddress}
                </td>
            </tr>
            <tr style="">
                <td >
                    出库合同：
                </td>
                <td >
                    $!{record.contractCode}
                </td>
                <td style="">
                    联系电话：
                </td>
                <td>
                    $!{record.telSign}
                </td>
                <td style="">
                    发货方式：
                </td>
                <td>
                    $!{record.sendTypeName}
                </td>

            </tr>
            <tr style="">
                <td style="">
                    邮编：
                </td>
                <td style="">
                    $!{record.postcode}
                </td>
                <td style="">
                    出库仓库：
                </td>
                <td>
                    $!{record.storageName}
                </td>
                <td style="">
                    联系人：
                </td>
                <td style="">
                    $!{record.linkman}
                </td>
            </tr>
            <tr style="">
                <td style="">
                    传真：
                </td>
                <td>
                    $!{record.fax}
                </td>
                <td style="">
                    发货人：
                </td>
                <td style="">
                    $!{record.sender}
                </td>
                <td style="">
                    出库时间：
                </td>
                <td style="">
                    $!{record.createdStr}
                </td>
              </tr>
        </table>
        <br>
        <table style="border: 1px solid #000000;width: 95%;font-size: 14px;margin-left: 20px;margin-right: 20px;margin-bottom: 20px;">
            <tr style="border: 1px solid #000000;">
                <th style="border-left: 1px solid #000000;width: 15%">配件编号</th>
                <th style="border-left: 1px solid #000000;width: 20%">配件名称</th>
                <th style="border-left: 1px solid #000000;width: 10%">单位</th>
                <th style="border-left: 1px solid #000000;width: 15%">出库数量</th>
                <th style="border-left: 1px solid #000000;width: 20%">出库单价</th>
                <th style="border-left: 1px solid #000000;border-right: 1px solid #000000;width: 20%">出库总价</th>
            </tr>
            #foreach($bill in $billList)
                <tr style="border: 1px solid #000000;">
                    <td style="border: 1px solid #000000;">
                        $!{bill.pCode}
                    </td>
                    <td style="border: 1px solid #000000;">
                        $!{bill.pName}
                    </td>
                    <td style="border: 1px solid #000000;">
                        $!{bill.unit}
                    </td>
                    <td style="border: 1px solid #000000;">
                        $!{bill.num}
                    </td>
                    <td style="border: 1px solid #000000;">
                        $!{bill.price}元
                    </td>
                    <td style="border: 1px solid #000000;">
                        $!{bill.totalAmt}元
                    </td>
                </tr>
            #end
            <tr style="border: 1px solid #000000;">
                <td style="border: 1px solid #000000;" colspan="3">
                    合计
                </td>
                <td style="border: 1px solid #000000;">
                    $!{record.totalNum}
                </td>
                <td style="border: 1px solid #000000;">
                </td>
                <td style="border: 1px solid #000000;">
                    $!{record.totalPrice}元
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="modal-footer col-xs-12">
    <button class="btn btn-sm btn-primary" type="button" id="print-btn" name="print-btn">
        打印
    </button>
    &nbsp; &nbsp; &nbsp;
    <button class="btn btn-white btn-info " type="button" id="closeInfoModal">
        关闭
    </button>
</div>

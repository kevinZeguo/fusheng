#set($page_title="入库管理")
#set($selected_menu_id='menu_task_center_index')
#set($layout = "blank.vm")
<style>
    .select2-container {
        max-width: 400px;
    }
</style>

<form class="form-horizontal" id="inPartForm" role="form">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">入库管理<span style="font-size: 12px">>>
            #if($add == "add")
                新增入库
            #else
                编辑入库
            #end

        </span></h4>
    </div>
    <div class="modal-body">
        <fieldset>
            <input type="hidden" id="id" name="id" value="$!{record.id}">

            <div class="form-group col-xs-12">
                <label class="col-xs-3 control-label no-padding-right" for="customerId"><span class="red">*</span> 配件编号:</label>

                <div class="col-xs-9">
                    <input type="text" id="pId" name="pId"
                           class="col-xs-9 ui-autocomplete-input" value="$!{record.partId}" #if($record.partId) readonly #end
                           placeholder="请选择配件"/>
                </div>
            </div>
            <div class="form-group col-xs-12">
                <label class="col-xs-3 control-label no-padding-right" for="eModel"> <span class="red">*</span>
                    配件名称:</label>

                <div class="col-xs-9">
                    <input type="text" id="pName" name="pName" readonly class="col-xs-9 ui-autocomplete-input"
                           value="$!{record.pCode}" #if($record.pId) readonly #end
                           placeholder="配件名称"/>
                </div>
            </div>
            <input type="hidden" id="pCode" name="pCode" class="col-xs-9 ui-autocomplete-input"
                   value=""
                   placeholder=""/>

            <div class="form-group col-xs-12">
                <label class="col-xs-3 control-label no-padding-right" for="makeNum"> 价格:</label>

                <div class="col-xs-9">
                    <input type="text" id="price" name="price" class="col-xs-8 ui-autocomplete-input"
                           value="$!{record.price}" onkeyup="value=value.replace(/[^\d.]/g,'')"
                           placeholder="输入入库价格"/>元
                </div>
            </div>

            <div class="form-group col-xs-12">
                <label class="col-xs-3 control-label no-padding-right" for="oldHostNum"><span class="red">*</span>
                    数量:</label>

                <div class="col-xs-9">
                    <input type="text" id="num" name="num" class="col-xs-9 ui-autocomplete-input"
                           value="$!{record.num}" onkeyup="value=value.replace(/[^\d.]/g,'')"
                           placeholder="输入入库数量"/>
                </div>
            </div>
            <div class="form-group col-xs-12">
                <label class="col-xs-3 control-label no-padding-right" for="supplier"><span class="red">*</span>
                    供货商:</label>

                <div class="col-xs-9">
                    <input type="text" id="supplier" name="supplier" class="col-xs-9 ui-autocomplete-input"
                           value="$!{record.supplier}" placeholder="输入供货商"/>
                </div>
            </div>
            <div class="form-group col-xs-12">
                <label class="col-xs-3 control-label no-padding-right" for="supplier"><span class="red">*</span>
                    仓库:</label>

                <div class="col-xs-9">
                    <select id="storageId" name="storageId" class="col-xs-9 ui-autocomplete-input" style="width: 450px"
                            aVal="$!{record.storageId}" placeholder="请选择仓库">
                    </select>
                </div>
            </div>

            <div class="form-group col-xs-12">
                <label class="col-xs-3 control-label no-padding-right" for="recordDate"><span class="red">*</span> 入库时间:</label>

                <div class="col-xs-9">
                    <input type="text" id="recordDate" name="recordDate" class="col-xs-9 ui-autocomplete-input"
                           value="$!{record.recordDate}"
                           placeholder="请选择入库时间"/>
                </div>
            </div>

            <div class="form-group col-xs-12">
                <label class="col-xs-3 control-label no-padding-right" for="note">备注:</label>

                <div class="col-xs-9">
                    <textarea id="note" name="note"
                              class="col-xs-9 ui-autocomplete-input" placeholder="输入备注">$!{record.note}</textarea>
                </div>
            </div>
        </fieldset>
    </div>
    <div class="modal-footer">
        <button class="btn btn-sm btn-primary" type="submit" id="submit-btn" name="submit-btn">
            保存
        </button>
        &nbsp; &nbsp; &nbsp;
        <button class="btn btn-white btn-info " type="reset" id="closeModal">
            关闭
        </button>
    </div>
</form>

<script src="/plug-in/sys/attr/listAttr.js?_dc=$!{staticVersion}"></script>
<script src="/plug-in/fusheng/part/listPart.js?_dc=$!{staticVersion}"></script>
<script src="/plug-in/fusheng/repertory/in/add.js?_dc=$!{staticVersion}"></script>

